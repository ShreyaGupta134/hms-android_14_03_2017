<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@android:color/white"
    android:backgroundTintMode="src_over">

    <ImageButton
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:src="@android:drawable/ic_menu_save"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:tint="@android:color/holo_blue_dark"
        android:background="@drawable/ripple"
        android:stateListAnimator="@anim/anim"
        android:backgroundTint="@android:color/transparent"
        android:elevation="8dp"
        style="@style/AppTheme"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/gender"
        android:hint="Gender"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/back"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text=""
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:hint="Age"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/back"
        android:layout_alignBaseline="@+id/gender"
        android:layout_toRightOf="@+id/gender"
        android:layout_marginStart="16dp" />

    <EditText
        android:hint="Smoking History"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/back"
        android:id="@+id/sh"
        android:layout_below="@+id/dh"
        android:layout_alignStart="@+id/dh"
        android:layout_alignEnd="@+id/dh" />

    <EditText
        android:hint="Hyper Tension History"
        android:layout_width="@dimen/fab_size"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        android:id="@+id/hth"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/back"
        android:layout_alignTop="@+id/address"
        android:layout_alignStart="@+id/gender"
        android:layout_toStartOf="@+id/address"
        android:layout_alignEnd="@+id/address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emergency_no"
        android:hint="Emerg. No."
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/back"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/gender"
        android:layout_toRightOf="@+id/age"
        android:layout_alignStart="@+id/gender" />

    <EditText
        android:hint="Address"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/address"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/back"
        android:layout_toRightOf="@id/age"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/button"
        android:layout_alignBottom="@+id/emergency_no"
        android:layout_alignTop="@+id/age" />

    <EditText
        android:hint="Diabetic History"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/dh"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/back"
        android:layout_below="@+id/hth"
        android:layout_alignStart="@+id/hth"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/hth" />

</RelativeLayout>